<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="InterestDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/bg_alibuybutton_default</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="@android:windowEnterAnimation">@anim/dialog_anim_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_anim_exit</item>
    </style>
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无 --> 
		<item name="android:windowIsFloating">true</item><!-- 是否漂现在activity上 -->
		<item name="android:windowIsTranslucent">true</item><!-- 是否半透明 -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item><!--  去除黑色边框的关键设置项 -->
		<item name="android:backgroundDimEnabled">true</item><!--屏幕背景是否变暗-->
		<item name="android:backgroundDimAmount">0.8</item>
	</style>
	<style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <style name="normalText" >
     	<item name="android:textSize">18sp</item>
     	<item name="android:textColor">#008</item>
 	</style>
 <!-- titleBar的样式设置 -->
    <style name="CustomizedWindowTitleBackgroundColor">
 		<item name="android:background">#B0E0E6</item>
	</style>
	
	<style name="titlebarstyle" parent="android:Theme">
           <item name="android:windowTitleSize">30dp</item>
           <item name="android:windowTitleBackgroundStyle">@style/CustomizedWindowTitleBackgroundColor</item>
	</style>
	
	<style name="MainactivityWindowTitleBackgroundColor">
 		<item name="android:background">@drawable/bg_alibuybutton_selected</item>
	</style>
	
	<style name="Maintitlebarstyle" parent="android:Theme">
           <item name="android:windowTitleSize">30dp</item>
           <item name="android:windowTitleBackgroundStyle">@style/MainactivityWindowTitleBackgroundColor</item>
	</style>
	
	<style name="SpiltactivityWindowTitleBackgroundColor">
 		<item name="android:background">#6699FF</item>
	</style>
	
	<style name="Splittitlebarstyle" parent="android:Theme">
           <item name="android:windowTitleSize">30dp</item>
           <item name="android:windowTitleBackgroundStyle">@style/SpiltactivityWindowTitleBackgroundColor</item>
	</style>
	<!-- *************************分割线*************************** -->
	
	<style name="toolbar_left_button_image"> 
        <item name="android:background">@drawable/back</item> 
    </style> 
    
    <style name="toolbar_left_button_text" >
     	<item name="android:textSize">14sp</item>
     	<item name="android:textColor">#0A0A0A</item>
 	</style>
 	
    <style name="toolbar_text" >
     	<item name="android:textSize">15sp</item>
     	<item name="android:textColor">#0A0A0A</item>
 	</style>
 	
 	<style name="toolbar_right_button_image"> 
        <item name="android:background">@drawable/reflesh</item> 
    </style> 
    
 	
	<style name="big_white_text">
	    <item name="android:textSize">25sp</item>
	    <item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="toolbar_right_button_text">
	    <item name="android:textSize">14sp</item>
     	<item name="android:textColor">#0A0A0A</item>
	</style>
	
	<style name="ContentTitleBarStyle" parent="android:Theme"> 
	<item name="android:windowTitleSize">32dp</item> 

	</style>
	
	<style name="titlebar_mainactivity_image">
	    <item name="android:background">@drawable/icon_defualt</item> 
	</style>
	<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
    	<item name="android:button">@drawable/checkbox_style</item>  
	</style> 
</resources>
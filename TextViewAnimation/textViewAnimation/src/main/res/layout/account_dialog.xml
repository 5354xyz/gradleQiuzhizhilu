<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/clearfocusaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/accountclear"
        android:background="@drawable/red_but_bk"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/changefocusaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/clearfocusaccount"
        android:layout_marginTop="37dp"
        android:background="@drawable/red_but_bk"
        android:text="@string/accountchange"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>